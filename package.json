{
  "name": "jira-slack-integration",
  "version": "1.0.0",
  "repository": "https://github.com/hjemmel/jira-slack-integration",
  "author": "Hans Jakob Emmel <hans.emmel@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node dist/index.js",
    "build": "ts-node build.ts && tsc",
    "dev": "cross-env NODE_ENV=development tsnd server/index.ts | pino-pretty",
    "dev:debug": "cross-env NODE_ENV=development tsnd --inspect -- server/index.ts | pino-pretty",
    "test": "cross-env DOTENV_CONFIG_PATH=.env.test jest --colors",
    "test:coverage": "cross-env DOTENV_CONFIG_PATH=.env.test jest --colors --coverage",
    "test:ci": "cross-env DOTENV_CONFIG_PATH=.env.test jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "lint": "eslint 'server/**/*.ts'"
  },
  "dependencies": {
    "bluebird": "3.7.2",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.4",
    "dotenv": "8.1.0",
    "express": "4.17.1",
    "express-openapi-validator": "1.8.1",
    "http-status-codes": "1.3.2",
    "pino": "5.13.4",
    "swagger-ui-express": "4.1.1"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.29",
    "@types/cookie-parser": "1.4.2",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.2",
    "@types/jest": "25.1.1",
    "@types/pino": "5.8.10",
    "@types/shelljs": "0.8.6",
    "@types/swagger-ui-express": "3.0.1",
    "@typescript-eslint/eslint-plugin": "2.3.2",
    "@typescript-eslint/parser": "2.3.2",
    "cross-env": "6.0.3",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-jest": "22.17.0",
    "eslint-plugin-prettier": "3.1.1",
    "jest": "25.1.0",
    "jest-junit": "10.0.0",
    "pino-pretty": "3.2.1",
    "prettier": "1.18.2",
    "shelljs": "0.8.3",
    "ts-jest": "25.1.0",
    "ts-node": "8.4.1",
    "ts-node-dev": "1.0.0-pre.43",
    "typescript": "3.6.3"
  }
}
